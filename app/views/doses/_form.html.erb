<!--
  It's better to write Ingredient.all in the collection
  in order to get the ingredient_id when we select the ingredient
  No need to create the following array :
  <% ingredients = Ingredient.all.each_with_object([]) { |ingredient, array| array << ingredient.name } %>
-->


<%= simple_form_for [@cocktail, @dose] do |f| %>
  <%= f.input :ingredient_id, label:false, prompt: "Ingredient", collection: Ingredient.all, as: :select, class: "form-control" %>
  <%= f.input :description, label: false, placeholder: "Amount?", class: "form-control" %>
  <%= f.submit "Add", class: "btn btn-primary form-control"%>
<% end %>
