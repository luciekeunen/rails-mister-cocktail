<div class="container">
  <div class="row">
    <div class="col-xs-12 text-center">
      <h1>Cocktails</h1>
    </div>
  </div>
  <div class="row">
    <% @cocktails.each do |cocktail| %>
      <div class="col-xs-12 col-sm-6 col-md-4">
        <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.2), rgba(0,0,0,0.2)),
         url('<%= image_default(cocktail)%>'); background-color: black; background-size: cover">
          <%= link_to cocktail_path(cocktail) do %>
            <div class="top">
            </div>
            <div class="bottom text-center">
              <p><%= cocktail.name %></p>
            </div>
          <% end %>
        </div>
      </div>
    <% end %>
      <div class="col-xs-12 col-sm-6 col-md-4">
        <div class="card" id="add">
          <%= link_to new_cocktail_path do %>
            <div class="top">
              <i class="fa fa-plus" aria-hidden="true"></i>
            </div>
            <div class="bottom">
              <p>Add your cocktail</p>
            </div>
          <% end %>
        </div>
      </div>
  </div>
</div>
